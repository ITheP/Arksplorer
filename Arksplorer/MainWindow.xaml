                                            Also <Run FontWeight="Bold">danlev</Run> for help linking to his awesome Dododex :)
                                        </TextBlock>
                                    </Viewbox>
                                </Grid>
                            </DockPanel>

                            <!--<local:InfoVisual x:Name="PopUpInfoVisual" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4" Padding="4" />-->
                        </Grid>

                        <GridSplitter Grid.Row="0" Height="3" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" ShowsPreview="False" Background="Black"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Ark Wikipedia" x:Name="ArkpediaTab">
                    <local:WebBrowser x:Name="ArkpediaBrowser"/>
                </TabItem>
                <TabItem Header="Dododex" x:Name="DododexTab">
                    <local:WebBrowser x:Name="DododexBrowser"/>
                </TabItem>
                <TabItem Header="YouTube" x:Name="YouTubeTab">
                    <local:WebBrowser x:Name="YouTubeBrowser"/>
                </TabItem>
                <TabItem Header="Server Website" x:Name="ServerTab">
                    <local:WebBrowser x:Name="ServerBrowser"/>
                </TabItem>
                <TabItem Header="Server Info" x:Name="ServerInfoTab">
                    <StackPanel>
                        <TextBlock x:Name="ServerInfo" FontSize="16" FontWeight="Bold">Server information</TextBlock>
                        <ListView x:Name="ServerInfoList" BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Grid>
                                            <TextBlock Text="{Binding Path=Description}" Width="170" HorizontalAlignment="Left" />
                                            <TextBlock Text="{Binding Value}" FontWeight="Bold" Margin="170,0,0,0" />
                                        </Grid>
                                        <TextBlock Text="{Binding Details}" FontStyle="Italic" Margin="170,0,0,0" TextWrapping="Wrap">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <Trigger Property="Text" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </Trigger>
                                                        <Trigger Property="Text" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </TabItem>
