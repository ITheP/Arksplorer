<Window x:Class="Arksplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arksplorer"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Arksplorer" Height="1100" Width="800" MinWidth="800" MinHeight="950"
        MouseMove="Window_MouseMove"
        MouseUp="Window_MouseUp"
        MouseRightButtonUp="Window_MouseRightButtonUp" Background="White">
    <Window.Resources>
        <Style TargetType="Button" x:Key="BrowserButton">
            <Setter Property="Margin" Value="3" />
            <Setter Property="Width" Value="75" />
            <Setter Property="Height" Value="25" />
            <!--<Setter Property="Background" Value="Transparent" />-->
        </Style>
        <Style TargetType="Button" x:Key="BrowserIconButton">
            <Setter Property="Margin" Value="3" />
            <Setter Property="Width" Value="25" />
            <Setter Property="Height" Value="25" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
        </Style>
        <Style TargetType="TextBlock" x:Key="TitleText">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Storyboard x:Key="AnimatedMarker" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" From="1.0" To="0.0" Duration="0:0:0.75"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" From="1.0" To="0.0" Duration="0:0:0.75"/>
        </Storyboard>
        <Storyboard x:Key="FlashControl">
            <ColorAnimationUsingKeyFrames BeginTime="00:00:00" Duration="00:00:00.1" Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" FillBehavior="Stop">
                <DiscreteColorKeyFrame KeyTime="00:00:00" Value="Orange"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimation BeginTime="00:00:00.2" Duration="00:00:00.4" From="Orange"  Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" FillBehavior="Stop"/>
        </Storyboard>
        <Storyboard x:Key="FlashTriggeredControl">
            <ColorAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" FillBehavior="Stop">
                <DiscreteColorKeyFrame KeyTime="00:00:00" Value="LightGreen"/>
                <DiscreteColorKeyFrame KeyTime="00:00:00.2" Value="LightGray"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="FlashMissingControl">
            <ObjectAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetProperty="(UIElement.Visibility)" FillBehavior="Stop">
                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Hidden}"/>
                <DiscreteObjectKeyFrame KeyTime="00:00:00.1" Value="{x:Static Visibility.Visible}"/>
                <DiscreteObjectKeyFrame KeyTime="00:00:00.2" Value="{x:Static Visibility.Hidden}"/>
                <DiscreteObjectKeyFrame KeyTime="00:00:00.3" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="FlashAlarm">
            <ColorAnimationUsingKeyFrames BeginTime="00:00:00" Duration="00:00:00.2" Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" FillBehavior="Stop">
                <DiscreteColorKeyFrame KeyTime="00:00:00" Value="Red"/>
            </ColorAnimationUsingKeyFrames>
            <ColorAnimationUsingKeyFrames BeginTime="00:00:00.4" Duration="00:00:00.2" Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" FillBehavior="Stop">
                <DiscreteColorKeyFrame KeyTime="00:00:00" Value="Red"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <DataTemplate x:Key="DataGridCellImage">
            <Image Source="{Binding}"/>
        </DataTemplate>
        <!--Annoyingly, DataGrid selected row highlighting dissapears when the DataGrid looses focus. We include a style here to keep that from happening...-->
        <Style x:Key="DataGridCellStyle1" TargetType="{x:Type DataGridCell}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource {x:Static DataGrid.FocusBorderBrushKey}}"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="true"/>
                        <Condition Property="Selector.IsSelectionActive" Value="false"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightBrushKey}}"/>
                </MultiTrigger>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static DataGrid.FocusBorderBrushKey}}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid x:Name="Root">
        <Popup Name="PopUpInfo"
            Placement="Relative"
            PlacementTarget="{Binding ElementName=Root}"
            IsOpen="False"
            StaysOpen="True"
            AllowsTransparency="True">
            <local:InfoVisual x:Name="PopUpInfoVisual" />
        </Popup>
        <DockPanel>
            <Grid>
                <DockPanel Width="200" Margin="10,0,10,0">
                    <StackPanel DockPanel.Dock="Bottom">
                        <Separator Margin="0,8"/>
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xEA8F;" FontFamily="Segoe MDL2 Assets" FontSize="18" Width="32" TextAlignment="Center" VerticalAlignment="Center"/>
                                        <Button Content="3" Width="20" Margin="6,0,0,0" Click="SetAlarm" Tag="3" Background="Lavender"/>
                                        <Button Content="5" Width="20" Margin="4,0,0,0" Click="SetAlarm" Tag="5" Background="Lavender"/>
                                        <Button Content="8" Width="20" Margin="4,0,0,0" Click="SetAlarm" Tag="8" Background="Lavender"/>
                                        <Button Content="+1" Width="20" Margin="4,0,0,0" Click="SetAlarm" Tag="+1"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <Button x:Name="AlarmOff" Content="Off" Width="32" Click="AlarmOff_Click"/>
                                        <Button Content="10" Width="20" Margin="6,0,0,0" Click="SetAlarm" Tag="10" Background="Lavender"/>
                                        <Button Content="11" Width="20" Margin="4,0,0,0" Click="SetAlarm" Tag="11" Background="Lavender"/>
                                        <Button Content="15" Width="20" Margin="4,0,0,0" Click="SetAlarm" Tag="15" Background="Lavender"/>
                                        <Button Content="-1" Width="20" Margin="4,0,0,0" Click="SetAlarm" Tag="-1"/>
                                    </StackPanel>
                                </StackPanel>
                                <TextBlock x:Name="AlarmTimeLeft" Text="Off" FontSize="20" Width="70" VerticalAlignment="Center" TextAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                        <Separator Margin="0,8"/>
                        <Button x:Name="ExternalResources" Content="Resources and Links" Click="ExternalResources_Click"/>
                        <Button x:Name="About" Content="About" Margin="0,4,0,0" Click="About_Click"/>
                        <Button x:Name="Exit" Content="Exit" Click="Exit_Click" Margin="0,4,0,8"/>
                    </StackPanel>
                    <StackPanel DockPanel.Dock="Top">
                        <Image Source="/Images/Arksplorer.png" Margin="0,2,0,0" />
                        <TextBlock x:Name="AppTitle" Text="Arksplorer" FontSize="16" HorizontalAlignment="Center" Margin="0,-16,0,0"/>
                        <TextBlock x:Name="Version" Text="Version" FontSize="10" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                        <Separator Margin="0,7,0,8"/>
                        <ComboBox x:Name="ServerList" IsEditable="False" SelectedValuePath="Name" SelectionChanged="ServerList_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" Width="{Binding ElementName=ServerList, Path=ActualWidth}"/>
                                        <TextBlock Text="&#xE774;" FontFamily="Segoe MDL2 Assets" Foreground="DarkGoldenrod" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                        <TextBlock Text="{Binding Website}" Margin="4,0,0,0"/>
                                        <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" Foreground="DarkOrange" VerticalAlignment="Center" Margin="12,0,0,0"/>
                                        <TextBlock Text="{Binding Url}" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <DockPanel Margin="0,4,0,0">
                            <Grid Height="32">
                                <Viewbox x:Name="GeneralLoadingSpinner" Height="32" VerticalAlignment="Center" HorizontalAlignment="Right" DockPanel.Dock="Right">
                                    <local:Spinner/>
                                </Viewbox>
                                <TextBlock x:Name="Status" FontWeight="Bold" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap">
                                    Please select a server from<LineBreak/>
                                    the drop down list above
                                </TextBlock>
                            </Grid>
                        </DockPanel>
                        <Separator Margin="0,6"/>
                        <Grid x:Name="ServerLoadedControls">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Foreground="CornflowerBlue" Style="{StaticResource TitleText}" HorizontalAlignment="Center">Maps to include...</TextBlock>
                                <ListView Margin="0,4,0,0" x:Name="MapsToInclude" ItemsSource="{Binding MapList}" BorderThickness="0">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Stretch">
                                                <CheckBox x:Name="MapsToIncludeCheckbox" Content="{Binding Name}" IsChecked="{Binding Load}" Click="MapsToIncludeCheckbox_Click"/>
                                                <TextBlock Text="{Binding CacheState}" HorizontalAlignment="Right" Visibility="Hidden"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                </ListView>
                                <Grid Margin="0,8,0,6">
                                    <Button x:Name="IncludeAll" HorizontalAlignment="Left" Width="40" Click="IncludeAll_Click">All</Button>
                                    <Button x:Name="IncludeNone" HorizontalAlignment="Left" Width="40" Margin="50,0,0,0" Click="IncludeNone_Click">None</Button>
                                </Grid>
                                <!--<CheckBox x:Name="AutoRefresh" Content="Auto Refresh when possible" IsChecked="True"/>-->
                                <Separator Margin="0,8"/>

                                <TextBlock Margin="0,0,0,4" FontWeight="Bold" Foreground="DarkSeaGreen" Style="{StaticResource TitleText}" HorizontalAlignment="Center">Show data for...</TextBlock>
                                <Button x:Name="LoadTameDinos" Content="Tame Dinos" Margin="0,4,0,0" Click="TameDinos_Click" />
                                <Button x:Name="LoadWildDinos" Content="Wild Dinos" Margin="0,4,0,0" Click="WildDinos_Click" />
                                <Button x:Name="LoadSurvivors" Content="Survivors" Margin="0,4,0,0" Click="Survivors_Click" />
                                <Separator Margin="0,12,0,8"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    <Grid>
                        <ScrollViewer x:Name="ExtraInfoHolder" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock x:Name="ExtraInfoTitle" Style="{StaticResource TitleText}" Text="Instructions" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                                <TextBlock x:Name="ExtraInfo" Margin="0,2,0,0" TextWrapping="Wrap">
                                    Select what maps to include, then click what you want to load/show. Click a result to find individuals.
                                    <LineBreak/>
                                    <LineBreak/>
                                    <Span FontStyle="Italic">Filter</Span> searches by map, dino names, creature types etc.
                                    <LineBreak/>
                                    Press <Span FontStyle="Italic" Foreground="Brown">enter</Span> or click <Span FontStyle="Italic" Foreground="Brown">Apply</Span> to apply filter. <Span FontStyle="Italic" Foreground="Brown">Exact</Span> returns exact matches.
                                    <LineBreak/>
                                    <LineBreak/>
                                    Multiple filters using , separation
                                    <LineBreak/>
                                    e.g. <Span FontStyle="Italic" Foreground="BlueViolet">ragn, arg</Span>ver
                                    returns results including <Span FontStyle="Italic" Foreground="BlueViolet">arg</Span>entavis on <Span FontStyle="Italic" Foreground="BlueViolet">ragn</Span>arok.
                                    <LineBreak/>
                                    <LineBreak/>
                                    Visit our facebook page... <Hyperlink NavigateUri="http://facebook.com/arksplorer" RequestNavigate="HandleLinkClick">facebook.com/arksplorer</Hyperlink>
                                </TextBlock>
                                <Grid x:Name="ExtraInfoMapDataHolder" Visibility="Collapsed">
                                    <StackPanel>
                                        <TextBlock TextAlignment="Right" Margin="0,0,1,0">Data updates</TextBlock>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                            <TextBlock Text="Map name" Width="88" />
                                            <TextBlock Text="Count"/>
                                            <TextBlock Margin="14,0,0,0" Text="Last"/>
                                            <TextBlock Margin="14,0,0,0" Text="Next"/>
                                        </StackPanel>
                                        <Separator/>
                                        <ListView x:Name="ExtraInfoMapData" Margin="-1,-2,0,0" BorderThickness="0">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid HorizontalAlignment="Stretch" Margin="0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding Key}" Width="80"/>
                                                            <TextBlock Text="{Binding Path=Value.Data.Rows.Count}" TextAlignment="Right" Width="41"/>
                                                            <TextBlock Text="{Binding Path=Value.Timestamp, StringFormat='HH:mm'}" Width="31" Margin="10,0,5,0" />
                                                            <TextBlock Text="{Binding Path=Value.ApproxNextServerUpdateTimestamp, StringFormat='HH:mm'}"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                            <ListView.ItemContainerStyle>
                                                <Style TargetType="ListViewItem">
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="Margin" Value="0"/>
                                                    <Setter Property="Padding" Value="0,2,0,0"/>
                                                </Style>
                                            </ListView.ItemContainerStyle>
                                        </ListView>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                        <ScrollViewer x:Name="ResourcesAndLinksExtraInfo"  VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                            <TextBlock TextWrapping="Wrap">
                            Handy resources and links...
                            <LineBreak/>
                            <LineBreak/>
                            Brilliant source of Ark data...
                            <LineBreak/>
                            <Hyperlink NavigateUri="https://ark.gamepedia.com/" RequestNavigate="HandleLinkClick">ark.gamepedia.com</Hyperlink>
                            <LineBreak/>
                            <LineBreak/>
                            Awesome taming calculator...
                            <LineBreak/>
                            <Hyperlink NavigateUri="https://www.dododex.com/" RequestNavigate="HandleLinkClick">www.Dododex.com</Hyperlink>
                            <LineBreak/>
                            <LineBreak/>
                            My favorite PVE ark servers...
                            <LineBreak/>
                            <Hyperlink NavigateUri="http://wiredcat.hopto.org/" RequestNavigate="HandleLinkClick">wiredcat.hopto.org</Hyperlink>
                            <LineBreak/>
                            <LineBreak/>
                            Visit our facebook page... <Hyperlink NavigateUri="http://facebook.com/arksplorer" RequestNavigate="HandleLinkClick">facebook.com/arksplorer</Hyperlink>
                            </TextBlock>
                        </ScrollViewer>
                        <ScrollViewer x:Name="AboutExtraInfo" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                            <TextBlock ScrollViewer.VerticalScrollBarVisibility="Auto" TextAlignment="Center"  TextWrapping="Wrap">
                            <Span FontSize="16" FontWeight="Bold">Arksplorer</Span>
                            <LineBreak/>
                            <Span FontStyle="Italic">© 2021 MisterB @ ITheP.Rocks</Span>
                            <LineBreak/>
                            <LineBreak/>
                            Simple front end Ark data visualiser that takes bits of Ark data expose
                            by an ark server to help you find things in Ark.
                            <LineBreak/>
                            <LineBreak/>
                            Also does a few other things because, why not!
                            <LineBreak/>
                            <LineBreak/>
                            Provided under <Hyperlink NavigateUri="https://creativecommons.org/licenses/by-nc-sa/4.0/" RequestNavigate="HandleLinkClick">CC BY-NC-SA 4.0</Hyperlink> License.
                            <LineBreak/>
                            <LineBreak/>
                            Artwork (c) respective artists - used in good faith under Creative Commons CC BY-NC-SA 3.0 License.
                            Please check <Hyperlink NavigateUri="https://ark.gamepedia.com/" RequestNavigate="HandleLinkClick">ark.gamepedia.com</Hyperlink> for extra details.
                            If you believe any content infringes on anything, or would like a credit adding, please contact and we will happily update accordingly!
                            <LineBreak/>
                            <LineBreak/>
                            Visit our facebook page... <Hyperlink NavigateUri="http://facebook.com/arksplorer" RequestNavigate="HandleLinkClick">facebook.com/arksplorer</Hyperlink>
                            <LineBreak/>
                            <LineBreak/>
                            Source code on github...
                            <LineBreak/>
                            <Hyperlink NavigateUri="https://github.com/ITheP/Arksplorer/" RequestNavigate="HandleLinkClick">github.com/ITheP/Arksplorer</Hyperlink>
                            </TextBlock>
                        </ScrollViewer>
                    </Grid>
                </DockPanel>
            </Grid>
            <TabControl Margin="0,0,8,8" Padding="8">
                <TabItem Header="Main" IsSelected="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" DockPanel.Dock="Top" Margin="0,0,0,8">
                            <Image x:Name="SplashImage" Source="/Images/WiredCat.jpg" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill"/>
                            <Viewbox Stretch="Uniform" RenderTransformOrigin="0.5,0.5" ClipToBounds="True">
                                <Grid x:Name="MapHolder" Width="100" Height="100" MouseWheel="MapHolder_MouseWheel">
                                    <Grid.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform x:Name="MapHolderZoom" ScaleX="{Binding ElementName=Zoom,Path=Value}" ScaleY="{Binding ElementName=Zoom,Path=Value}" CenterX="50" CenterY="50"/>
                                        </TransformGroup>
                                    </Grid.RenderTransform>
                                    <Image x:Name="MapImage" Source="/Images/WiredCat.jpg" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill" MouseUp="MapImage_MouseUp" />
                                    <Grid x:Name="MassMarkerHolder">
                                    </Grid>
                                    <Ellipse x:Name="Marker" Width="5" Height="5" Fill="CornflowerBlue" Stroke="White" StrokeThickness="0.55" RenderTransformOrigin="0.5,0.5">
                                        <Ellipse.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform x:Name="MarkerScale" ScaleX="1.0" ScaleY="1.0"/>
                                                <SkewTransform/>
                                                <RotateTransform/>
                                                <TranslateTransform x:Name="MarkerOffset" X="25" Y="25"/>
                                            </TransformGroup>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                    <Ellipse x:Name="CustomMarker" Width="5" Height="5" Fill="DarkOrange" Stroke="White" StrokeThickness="0.55" RenderTransformOrigin="0.5,0.5" MouseUp="CustomMarker_MouseUp">
                                        <Ellipse.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform x:Name="CustomMarkerScale" ScaleX="1.0" ScaleY="1.0"/>
                                                <SkewTransform/>
                                                <RotateTransform/>
                                                <TranslateTransform x:Name="CustomMarkerOffset" X="15" Y="25"/>
                                            </TransformGroup>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                </Grid>
                            </Viewbox>
                            <local:InfoVisual x:Name="OverviewInfo" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="4" Padding="4" />
                        </Grid>
                        <Grid Grid.Row="1" VerticalAlignment="Stretch">
                            <DockPanel VerticalAlignment="Stretch">
                                <StackPanel DockPanel.Dock="Top">
                                    <DockPanel Margin="0,5,0,0">
                                        <TextBlock VerticalAlignment="Center" Width="35" DockPanel.Dock="Left">Zoom</TextBlock>
                                        <Ellipse x:Name="HideCustomMarker"  Fill="LightGray" Stroke="LightGray" StrokeThickness="3" Width="20" Height="20" VerticalAlignment="Top" Margin="8,1,0,0" DockPanel.Dock="Right" MouseUp="HideCustomMarker_MouseUp"/>
                                        <Slider x:Name="Zoom" Value="1" Minimum="1" Maximum="25" SmallChange="0.01" LargeChange="1" TickFrequency="1" TickPlacement="BottomRight" />
                                    </DockPanel>
                                    <DockPanel Margin="0,4,0,0" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Top">
                                            <Button x:Name="ApplyFilter" Margin="16,0,0,0" Width="75" VerticalAlignment="Center" Click="ApplyFilter_Click">Apply</Button>
                                            <Button x:Name="ExactFilter" Margin="8,0,0,0" Width="75" VerticalAlignment="Center" Click="ExactFilter_Click">Exact</Button>
                                            <Button x:Name="RemoveFilter" Margin="8,0,0,0" Width="75" VerticalAlignment="Center" Click="RemoveFilter_Click">Show all</Button>
                                        </StackPanel>

                                        <TextBlock VerticalAlignment="Center" DockPanel.Dock="Left" Width="35">Filter</TextBlock>
                                        <TextBox x:Name="FilterCriteria" HorizontalAlignment="Stretch" KeyDown="FilterCriteria_KeyDown" ToolTip="Filter criteria. Multiple criteria possible, just use , separation!"/>
                                    </DockPanel>
                                    <WrapPanel Margin="35,4,4,0" Orientation="Horizontal">
                                        <ComboBox x:Name="FilterLevelType" Width="130" SelectedValuePath="Tag" SelectionChanged="FilterLevelType_SelectionChanged">
                                            <ComboBoxItem Content="Include all levels" IsSelected="True" Tag="All"/>
                                            <ComboBoxItem Content="Ignore below level" Tag="Below"/>
                                            <ComboBoxItem Content="Ignore above level" Tag="Above"/>
                                        </ComboBox>
                                        <TextBox x:Name="FilterLevelNumber" Text="150" HorizontalAlignment="Stretch" Width="30" Margin="2,0,0,0" PreviewTextInput="FilterLevelNumber_PreviewTextInput" DataObject.Pasting="FilterLevelNumber_Pasting" />
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox x:Name="ShowSameType" Content="Show matching" Margin="8,2,0,2" VerticalAlignment="Center" IsChecked="True" Click="ShowSameType_Click" />
                                            <CheckBox x:Name="ShowPopups" Content="Show popups" Margin="8,2,0,2" VerticalAlignment="Center" IsChecked="True" ToolTip="Show popup information under pointer"/>
                                            <CheckBox x:Name="IncludeDetailsInPopUps" Content="Include details" Margin="8,2,0,2" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </WrapPanel>
                                    <StackPanel Margin="35,4,4,0" Orientation="Horizontal">
                                        <ComboBox x:Name="FilterColor" Width="200" SelectedValuePath="Value" SelectionChanged="FilterColor_SelectionChanged">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderThickness="1" BorderBrush="Black" Background="{Binding Path=Value.Color}" Width="182" Margin="-6,-3,-6,-2">
                                                        <Grid>
                                                            <TextBlock Text="{Binding Path=Value.Id}" FontStyle="Italic" Margin="4,2,0,2" Foreground="{Binding Path=Value.LabelColor}"/>
                                                            <TextBlock Text="{Binding Path=Value.Name}" Margin="30,2,0,2" Foreground="{Binding Path=Value.LabelColor}"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <ComboBox x:Name="FilterColorCloseness" Width="130" SelectedValuePath="Tag" Margin="2,0,0,0" SelectionChanged="FilterColorCloseness_SelectionChanged">
                                            <ComboBoxItem Content="Exact matches only" Tag="0"/>
                                            <ComboBoxItem Content="Super close" Tag="1"/>
                                            <ComboBoxItem Content="Close" IsSelected="True" Tag="2"/>
                                            <ComboBoxItem Content="Quite close" Tag="3"/>
                                            <ComboBoxItem Content="Near" Tag="4"/>
                                            <ComboBoxItem Content="Nearish" Tag="5"/>
                                            <ComboBoxItem Content="Far" Tag="10"/>
                                            <ComboBoxItem Content="Distant" Tag="20"/>
                                        </ComboBox>
                                        <Button x:Name="FilterC0" Content="C0" Tag="C0" Click="FilterColor_Click" Margin="2,0,0,0" Padding="2,0"/>
                                        <Button x:Name="FilterC1" Content="C1" Tag="C1" Click="FilterColor_Click" Margin="2,0,0,0" Padding="2,0"/>
                                        <Button x:Name="FilterC2" Content="C2" Tag="C2" Click="FilterColor_Click" Margin="2,0,0,0" Padding="2,0"/>
                                        <Button x:Name="FilterC3" Content="C3" Tag="C3" Click="FilterColor_Click" Margin="2,0,0,0" Padding="2,0"/>
